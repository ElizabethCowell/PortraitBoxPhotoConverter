@model Customer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Document</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</head>
<body>
    <form method="post" enctype="multipart/form-data" asp-controler="CustomerController" asp-action="AddCustomer">
        <div class="formfont">
        <label for="fname">First name:</label><br>
        <input asp-for="FirstName" type="text" id="firstname" name="firstname"><br>
        <label for="lname">Last name:</label><br>
        <input asp-for="LastName" type="text" id="lname" name="lastname"><br>
        <label for="pnumber">Phone Number:</label><br>
        <input asp-for="PhoneNumber" type="text" id="pnumber" name="phonenumber"><br>
        <label for="email">Email:</label><br>
        <input asp-for="Email" type="text" id="email" name="email"><br>
        <input class ="btn" type="submit" value="Submit">
        </div>
    </form>
</body>
</html>
